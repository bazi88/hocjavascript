extends ../homeAdmin.pug
block head
block contentWarpper
    .container
    .row
        .col-xl-12.col-lg-12
            .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Post Details
                .card-body
                    .table-responsive
                        table#dataTable.table.table-bordered(width='100%' cellspacing='0')
                            thead
                                tr
                                    th Id
                                    th Title
                                    th Category
                                    th Author
                                    th Content
                                    th Time

                            tfoot
                                th Id
                                th Title
                                th Category
                                th Author
                                th Content
                                th Time
                            tbody
                                tr(href="/post/"+post._id)
                                    td= post._id
                                    td= post.title
                                    td= post.category
                                    td= post.author
                                    td= post.content
                                    td= post.time
