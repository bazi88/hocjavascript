extends homeAdmin
block head
    link(href="/css/all.min.css" rel="stylesheet" type="text/css")
    link(href="/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css")
    link(href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet")
block contentWarpper
    .row
        .col-xl-12.col-lg-12
            if success
                h6(class="text-success") #{success}
            .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Add Category
                .card-body
                    <form method="POST">
                        <label class="full-width">Name Category: <input type="text" name="name" class="full-width"></label><br>
                        <label class="full-width">Seo: <input type="text" name="seo" class="full-width"></label><br>
                        <input class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" type="submit" value="Submit">
                    </form>